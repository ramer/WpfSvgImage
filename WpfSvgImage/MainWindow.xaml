<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSvgImage"
        mc:Ignorable="d"
        Height="450" Width="800">

    <DockPanel Margin="5">
        <DockPanel DockPanel.Dock="Left" Width="200" Margin="0,0,5,0">
            <TextBox x:Name="tbPath" Text="D:\svg"  DockPanel.Dock="Bottom"/>
            <ListBox x:Name="lbFiles" Margin="0,0,0,5"/>
        </DockPanel>
        <Viewbox>
            <local:SvgImage Source="{Binding ElementName=lbFiles, Path=SelectedItem}" Fill="Black"/>
            <!--<local:SvgImage Source="SVGReader;component/images/drawing.svg" Fill="Black" Stroke="Red" StrokeThickness="5"/>-->
        </Viewbox>
    </DockPanel>
</Window>
